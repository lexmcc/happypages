<div class="max-w-2xl mx-auto px-4 sm:px-6 py-8">
  <h1 class="text-2xl font-bold text-gray-900 tracking-tight mb-6">new project.</h1>

  <div class="bg-[#f4f4f0] rounded-xl border border-black/5 shadow-[inset_1px_1px_0_rgba(255,255,255,1),inset_-1px_-1px_0_rgba(0,0,0,0.05),0_4px_8px_rgba(0,0,0,0.05)] p-6">
    <%= form_with model: @project, url: admin_specs_path, class: "space-y-5" do |f| %>
      <% if @project.errors.any? %>
        <div class="p-3 bg-red-50 border border-red-200 rounded-lg">
          <p class="text-sm text-red-700"><%= @project.errors.full_messages.join(", ") %></p>
        </div>
      <% end %>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">project name</label>
        <%= f.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-[#ff584d]/20 focus:border-[#ff584d] outline-none transition-colors", placeholder: "e.g. Checkout Redesign" %>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">context briefing <span class="text-gray-400 font-normal">(optional)</span></label>
        <%= f.text_area :context_briefing, rows: 5, class: "w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-[#ff584d]/20 focus:border-[#ff584d] outline-none transition-colors resize-y", placeholder: "Paste any background info, links, or notes. The AI will use this as context for the interview." %>
        <p class="mt-1.5 text-xs text-gray-400">anything you want the AI to know before starting the interview.</p>
      </div>

      <div class="flex items-center justify-between pt-2">
        <%= link_to "cancel", admin_specs_path, class: "text-sm text-gray-500 hover:text-gray-700 transition-colors" %>
        <%= f.submit "start interview", class: "inline-flex items-center gap-2 px-5 py-2.5 rounded-lg text-sm font-medium text-white bg-[#ff584d] hover:bg-[#e64d43] transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
