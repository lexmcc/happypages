<% if impersonating? %>
  <div class="fixed top-0 left-0 right-0 z-50 h-10 bg-slate-800 text-white flex items-center justify-between px-4 text-sm" data-impersonation-banner>
    <div class="flex items-center gap-2">
      <svg class="w-4 h-4 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
      </svg>
      <span>Viewing <strong>"<%= impersonated_shop.name %>"</strong> as shop owner</span>
    </div>
    <div class="flex items-center gap-3">
      <%= link_to "Superadmin", superadmin_root_path, target: "_blank", class: "text-slate-300 hover:text-white text-xs" %>
      <%= button_to "Exit", superadmin_impersonation_path, method: :delete, class: "px-3 py-1 text-xs font-medium rounded bg-slate-600 hover:bg-slate-500 text-white cursor-pointer" %>
    </div>
  </div>
<% end %>
