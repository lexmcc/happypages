<div class="min-h-screen bg-[#f9f9f9] py-8">
  <div class="max-w-2xl mx-auto px-4 sm:px-6">
    <header class="mb-8">
      <%= link_to admin_campaigns_path, class: "inline-flex items-center gap-1 text-gray-500 hover:text-gray-700 text-sm mb-4" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Campaigns
      <% end %>
      <h1 class="text-3xl font-bold text-gray-900">New Discount Group</h1>
      <p class="text-gray-600 mt-2">Create a new discount campaign with its own rules</p>
    </header>

    <% if @group.errors.any? %>
      <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
        <h3 class="text-red-800 font-medium mb-2">Please fix the following errors:</h3>
        <ul class="text-red-700 text-sm list-disc list-inside">
          <% @group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @group, url: admin_discount_groups_path, method: :post, local: true, class: "space-y-6", data: { controller: "discount-form" } do |form| %>
      <div class="bg-[#f4f4f0] rounded-xl border border-black/5 shadow-[inset_1px_1px_0_rgba(255,255,255,1),inset_-1px_-1px_0_rgba(0,0,0,0.05),0_4px_8px_rgba(0,0,0,0.05)] overflow-hidden">
        <div class="px-6 py-4 border-b border-black/5">
          <h3 class="text-lg font-semibold text-gray-900">Group Details</h3>
        </div>

        <div class="p-6 space-y-6">
          <%# Name %>
          <div>
            <label for="shared_discount_name" class="block text-sm font-medium text-gray-700 mb-1">
              Group Name
            </label>
            <%= form.text_field :name, class: "w-full px-4 py-2 bg-[#f9f9f9] border border-black/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#ff584d] focus:border-[#ff584d]", placeholder: "e.g. Summer Sale Campaign" %>
          </div>

          <%# Referred Discount %>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
              Referee Discount
              <span class="font-normal text-gray-400">(given to person using the code)</span>
            </label>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <%= form.select :referred_discount_type,
                    options_for_select([["Percentage", "percentage"], ["Fixed Amount", "fixed_amount"]], @group.referred_discount_type),
                    {}, class: "w-full px-4 py-2 bg-[#f9f9f9] border border-black/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#ff584d] focus:border-[#ff584d]", data: { discount_form_target: "typeSelect", action: "change->discount-form#validate" } %>
              </div>
              <div class="relative">
                <%= form.text_field :referred_discount_value, class: "w-full px-4 py-2 bg-[#f9f9f9] border border-black/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#ff584d] focus:border-[#ff584d]", placeholder: "50", data: { discount_form_target: "valueInput", action: "input->discount-form#validate" } %>
              </div>
            </div>
          </div>

          <%# Referrer Reward %>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
              Referrer Reward
              <span class="font-normal text-gray-400">(given to person who shared)</span>
            </label>
            <div class="grid grid-cols-2 gap-4">
              <div>
                <%= form.select :referrer_reward_type,
                    options_for_select([["Percentage", "percentage"], ["Fixed Amount", "fixed_amount"]], @group.referrer_reward_type),
                    {}, class: "w-full px-4 py-2 bg-[#f9f9f9] border border-black/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#ff584d] focus:border-[#ff584d]", data: { discount_form_target: "typeSelect", action: "change->discount-form#validate" } %>
              </div>
              <div class="relative">
                <%= form.text_field :referrer_reward_value, class: "w-full px-4 py-2 bg-[#f9f9f9] border border-black/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#ff584d] focus:border-[#ff584d]", placeholder: "50", data: { discount_form_target: "valueInput", action: "input->discount-form#validate" } %>
              </div>
            </div>
          </div>

          <%# Purchase Type Eligibility %>
          <div class="mt-6 border-t border-gray-200 pt-4">
            <h4 class="text-sm font-medium text-gray-700 mb-3">Purchase Type Eligibility</h4>

            <div class="space-y-3">
              <label class="flex items-center">
                <%= form.check_box :applies_on_one_time_purchase, { checked: true, class: "rounded border-gray-300 text-coral-500 focus:ring-coral-500" } %>
                <span class="ml-2 text-sm text-gray-700">One-time purchases</span>
              </label>

              <label class="flex items-center">
                <%= form.check_box :applies_on_subscription, { checked: true, class: "rounded border-gray-300 text-coral-500 focus:ring-coral-500" } %>
                <span class="ml-2 text-sm text-gray-700">Subscription products (Awtomic)</span>
              </label>
            </div>
          </div>
        </div>
      </div>

      <div class="flex items-center justify-end gap-4">
        <%= link_to "Cancel", admin_campaigns_path, class: "px-5 py-2.5 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors font-medium" %>
        <%= form.submit "Create Group", class: "px-5 py-2.5 bg-[#ff584d] text-white rounded-lg hover:bg-[#e64d43] transition-colors font-medium cursor-pointer", data: { discount_form_target: "submitButton" } %>
      </div>
    <% end %>
  </div>
</div>
