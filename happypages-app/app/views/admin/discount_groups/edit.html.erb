<%= render "admin/shared/tabs" %>

<div class="min-h-screen bg-[#f9f9f9] py-8">
  <div class="max-w-2xl mx-auto px-4">
    <header class="mb-8">
      <%= link_to edit_admin_config_path, class: "inline-flex items-center gap-1 text-gray-500 hover:text-gray-700 text-sm mb-4" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Configuration
      <% end %>
      <div class="flex items-center gap-3">
        <h1 class="text-3xl font-bold text-gray-900">Edit: <%= @group.name %></h1>
        <% if @group.is_active? %>
          <span class="inline-flex items-center px-2.5 py-0.5 bg-emerald-100 text-emerald-700 text-xs font-medium rounded-full">
            ACTIVE
          </span>
        <% end %>
      </div>
      <p class="text-gray-600 mt-2">Modify discount rules for this campaign</p>
    </header>

    <% if @group.errors.any? %>
      <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
        <h3 class="text-red-800 font-medium mb-2">Please fix the following errors:</h3>
        <ul class="text-red-700 text-sm list-disc list-inside">
          <% @group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="space-y-6">
      <%# Main Edit Form %>
      <%= form_with model: @group, url: admin_discount_group_path(@group), method: :patch, local: true, class: "space-y-6", data: { controller: "discount-form" } do |form| %>
        <div class="bg-[#f4f4f0] rounded-xl border border-black/5 shadow-[inset_1px_1px_0_rgba(255,255,255,1),inset_-1px_-1px_0_rgba(0,0,0,0.05),0_4px_8px_rgba(0,0,0,0.05)] overflow-hidden">
          <div class="px-6 py-4 border-b border-black/5">
            <h3 class="text-lg font-semibold text-gray-900">Base Rules</h3>
            <p class="text-sm text-gray-500">These are the default discount values when no boost is active</p>
          </div>

          <div class="p-6 space-y-6">
            <%# Name %>
            <div>
              <label for="shared_discount_name" class="block text-sm font-medium text-gray-700 mb-1">
                Group Name
              </label>
              <%= form.text_field :name, class: "w-full px-4 py-2 bg-[#f9f9f9] border border-black/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#ff584d] focus:border-[#ff584d]" %>
            </div>

            <%# Referred Discount %>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Referee Discount
                <span class="font-normal text-gray-400">(given to person using the code)</span>
              </label>
              <% if @group.current_generation&.codes_count.to_i > 0 %>
                <p class="text-sm text-amber-600 mb-2">
                  <svg class="w-4 h-4 inline" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                  </svg>
                  Changing this will create a new generation. Existing codes (<%= @group.current_generation.codes_count %>) keep their current discount.
                </p>
              <% end %>
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <%= form.select :referred_discount_type,
                      options_for_select([["Percentage", "percentage"], ["Fixed Amount", "fixed_amount"]], @group.referred_discount_type),
                      {}, class: "w-full px-4 py-2 bg-[#f9f9f9] border border-black/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#ff584d] focus:border-[#ff584d]", data: { discount_form_target: "typeSelect", action: "change->discount-form#validate" } %>
                </div>
                <div class="relative">
                  <%= form.text_field :referred_discount_value, class: "w-full px-4 py-2 bg-[#f9f9f9] border border-black/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#ff584d] focus:border-[#ff584d]", data: { discount_form_target: "valueInput", action: "input->discount-form#validate" } %>
                </div>
              </div>
            </div>

            <%# Referrer Reward %>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">
                Referrer Reward
                <span class="font-normal text-gray-400">(given to person who shared)</span>
              </label>
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <%= form.select :referrer_reward_type,
                      options_for_select([["Percentage", "percentage"], ["Fixed Amount", "fixed_amount"]], @group.referrer_reward_type),
                      {}, class: "w-full px-4 py-2 bg-[#f9f9f9] border border-black/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#ff584d] focus:border-[#ff584d]", data: { discount_form_target: "typeSelect", action: "change->discount-form#validate" } %>
                </div>
                <div class="relative">
                  <%= form.text_field :referrer_reward_value, class: "w-full px-4 py-2 bg-[#f9f9f9] border border-black/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#ff584d] focus:border-[#ff584d]", data: { discount_form_target: "valueInput", action: "input->discount-form#validate" } %>
                </div>
              </div>
            </div>

            <%# Purchase Type Eligibility %>
            <div class="mt-6 border-t border-gray-200 pt-4">
              <h4 class="text-sm font-medium text-gray-700 mb-3">Purchase Type Eligibility</h4>

              <div class="space-y-3">
                <label class="flex items-center">
                  <%= form.check_box :applies_on_one_time_purchase, class: "rounded border-gray-300 text-coral-500 focus:ring-coral-500" %>
                  <span class="ml-2 text-sm text-gray-700">One-time purchases</span>
                </label>

                <label class="flex items-center">
                  <%= form.check_box :applies_on_subscription, class: "rounded border-gray-300 text-coral-500 focus:ring-coral-500" %>
                  <span class="ml-2 text-sm text-gray-700">Subscription products (Awtomic)</span>
                </label>
              </div>
            </div>
          </div>
        </div>

        <div class="flex items-center justify-end gap-4">
          <%= link_to "Cancel", edit_admin_config_path, class: "px-5 py-2.5 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition-colors font-medium" %>
          <%= form.submit "Save Changes", class: "px-5 py-2.5 bg-[#ff584d] text-white rounded-lg hover:bg-[#e64d43] transition-colors font-medium cursor-pointer", data: { discount_form_target: "submitButton" } %>
        </div>
      <% end %>

      <%# Boost/Override Section %>
      <div class="bg-[#f4f4f0] rounded-xl border border-black/5 shadow-[inset_1px_1px_0_rgba(255,255,255,1),inset_-1px_-1px_0_rgba(0,0,0,0.05),0_4px_8px_rgba(0,0,0,0.05)] overflow-hidden">
        <div class="px-6 py-4 border-b border-black/5">
          <h3 class="text-lg font-semibold text-gray-900">Temporary Boost</h3>
          <p class="text-sm text-gray-500">Schedule a temporary discount boost for promotions</p>
        </div>

        <div class="p-6">
          <% if @group.override_active? %>
            <div class="p-4 bg-amber-50 border border-amber-200 rounded-lg mb-4">
              <div class="flex items-center gap-2 text-amber-700 font-medium mb-2">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"></path>
                </svg>
                Boost Currently Active
              </div>
              <p class="text-sm text-amber-600">
                Referred: <strong><%= @group.override_referred_display %></strong> |
                Reward: <strong><%= @group.override_reward_display %></strong><br>
                Ends: <%= @group.override_ends_at.strftime('%B %d, %Y at %H:%M') %>
              </p>
              <%= button_to "End Boost Now", cancel_override_admin_discount_group_path(@group), method: :post, class: "mt-3 px-4 py-2 bg-amber-200 text-amber-800 rounded-lg text-sm font-medium hover:bg-amber-300 transition-colors", data: { turbo_confirm: "End the boost early and revert to base rates?" } %>
            </div>
          <% elsif @group.override_scheduled? %>
            <div class="p-4 bg-blue-50 border border-blue-200 rounded-lg mb-4">
              <div class="flex items-center gap-2 text-blue-700 font-medium mb-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Boost Scheduled
              </div>
              <p class="text-sm text-blue-600">
                Referred: <strong><%= @group.override_referred_display %></strong> |
                Reward: <strong><%= @group.override_reward_display %></strong><br>
                From: <%= @group.override_starts_at.strftime('%B %d, %Y at %H:%M') %><br>
                To: <%= @group.override_ends_at.strftime('%B %d, %Y at %H:%M') %>
              </p>
              <%= button_to "Cancel Scheduled Boost", cancel_override_admin_discount_group_path(@group), method: :post, class: "mt-3 px-4 py-2 bg-blue-200 text-blue-800 rounded-lg text-sm font-medium hover:bg-blue-300 transition-colors", data: { turbo_confirm: "Cancel the scheduled boost?" } %>
            </div>
          <% else %>
            <%= form_with url: schedule_override_admin_discount_group_path(@group), method: :post, local: true, data: { controller: "discount-form" } do |f| %>
              <div class="space-y-4">
                <div class="grid grid-cols-2 gap-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Boost Referred Discount</label>
                    <div class="grid grid-cols-2 gap-2">
                      <%= f.select :override_referred_type,
                          options_for_select([["Percentage", "percentage"], ["Fixed Amount", "fixed_amount"]], "percentage"),
                          {}, class: "px-3 py-2 bg-[#f9f9f9] border border-black/10 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-[#ff584d]", data: { discount_form_target: "typeSelect", action: "change->discount-form#validate" } %>
                      <%= f.text_field :override_referred_value, placeholder: "40", class: "px-3 py-2 bg-[#f9f9f9] border border-black/10 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-[#ff584d]", data: { discount_form_target: "valueInput", action: "input->discount-form#validate" } %>
                    </div>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Boost Referrer Reward</label>
                    <div class="grid grid-cols-2 gap-2">
                      <%= f.select :override_reward_type,
                          options_for_select([["Percentage", "percentage"], ["Fixed Amount", "fixed_amount"]], "percentage"),
                          {}, class: "px-3 py-2 bg-[#f9f9f9] border border-black/10 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-[#ff584d]", data: { discount_form_target: "typeSelect", action: "change->discount-form#validate" } %>
                      <%= f.text_field :override_reward_value, placeholder: "40", class: "px-3 py-2 bg-[#f9f9f9] border border-black/10 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-[#ff584d]", data: { discount_form_target: "valueInput", action: "input->discount-form#validate" } %>
                    </div>
                  </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Starts At</label>
                    <%= f.datetime_local_field :override_starts_at, value: Time.current.beginning_of_day, class: "w-full px-3 py-2 bg-[#f9f9f9] border border-black/10 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-[#ff584d]" %>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Ends At</label>
                    <%= f.datetime_local_field :override_ends_at, value: 1.month.from_now.end_of_day, class: "w-full px-3 py-2 bg-[#f9f9f9] border border-black/10 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-[#ff584d]" %>
                  </div>
                </div>

                <div class="flex justify-end">
                  <%= f.submit "Schedule Boost", class: "px-4 py-2 bg-amber-500 text-white rounded-lg text-sm font-medium hover:bg-amber-600 transition-colors cursor-pointer", data: { discount_form_target: "submitButton" } %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <%# Generations Info (read-only) %>
      <% if @group.discount_generations.count > 0 %>
        <div class="bg-[#f4f4f0] rounded-xl border border-black/5 shadow-[inset_1px_1px_0_rgba(255,255,255,1),inset_-1px_-1px_0_rgba(0,0,0,0.05),0_4px_8px_rgba(0,0,0,0.05)] overflow-hidden">
          <div class="px-6 py-4 border-b border-black/5">
            <h3 class="text-lg font-semibold text-gray-900">Discount Generations</h3>
            <p class="text-sm text-gray-500">Each generation represents a separate Shopify discount (for grandfathering)</p>
          </div>

          <div class="divide-y divide-black/5">
            <% @group.discount_generations.order(created_at: :desc).each do |gen| %>
              <div class="px-6 py-3 flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <% if gen.is_current? %>
                    <span class="inline-flex items-center px-2 py-0.5 bg-emerald-100 text-emerald-700 text-xs font-medium rounded">
                      CURRENT
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2 py-0.5 bg-gray-100 text-gray-600 text-xs font-medium rounded">
                      LEGACY
                    </span>
                  <% end %>
                  <span class="text-sm text-gray-700">
                    <%= gen.discount_display %> off
                  </span>
                </div>
                <div class="flex items-center gap-4 text-sm text-gray-500">
                  <span><%= gen.codes_count %> codes</span>
                  <span>Created <%= gen.created_at.strftime('%b %d, %Y') %></span>
                  <% if gen.synced? %>
                    <span class="inline-flex items-center gap-1 text-emerald-600">
                      <span class="size-2 bg-emerald-500 rounded-full"></span>
                      Synced
                    </span>
                  <% else %>
                    <span class="inline-flex items-center gap-1 text-gray-400">
                      <span class="size-2 bg-gray-400 rounded-full"></span>
                      Not synced
                    </span>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
