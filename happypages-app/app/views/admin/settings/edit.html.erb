<div class="min-h-screen bg-[#f9f9f9] py-8">
  <div class="max-w-3xl mx-auto px-4 sm:px-6">
    <header class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Settings</h1>
      <p class="text-gray-600 mt-2">Manage your shop configuration</p>
    </header>

    <% if notice %>
      <div class="mb-6 p-4 bg-emerald-50 border border-emerald-200 rounded-lg text-emerald-700 text-sm">
        <%= notice %>
      </div>
    <% end %>

    <% if alert %>
      <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg text-red-700 text-sm">
        <%= alert %>
      </div>
    <% end %>

    <% if @shop %>
      <section>
        <div class="bg-[#f4f4f0] rounded-xl border border-black/5 shadow-[inset_1px_1px_0_rgba(255,255,255,1),inset_-1px_-1px_0_rgba(0,0,0,0.05),0_4px_8px_rgba(0,0,0,0.05)] overflow-hidden">
          <div class="px-6 py-4 border-b border-black/5">
            <h3 class="text-lg font-semibold text-gray-900">White-Labeled Referral URL</h3>
            <p class="text-sm text-gray-500">Customize your shop's referral page URL slug</p>
          </div>

          <div class="p-6">
            <%= form_with url: admin_settings_path, method: :patch, local: true, class: "space-y-4" do %>
              <div class="max-w-md">
                <label for="shop_slug" class="block text-sm font-medium text-gray-700 mb-1">
                  URL Slug
                </label>
                <div class="flex items-center gap-2">
                  <span class="text-gray-500 text-sm">https://app.happypages.co/</span>
                  <input
                    type="text"
                    name="shop_slug"
                    id="shop_slug"
                    value="<%= @shop.slug %>"
                    pattern="[a-z0-9-]+"
                    minlength="3"
                    maxlength="50"
                    class="flex-1 px-4 py-2 bg-[#f9f9f9] border border-black/10 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#ff584d] focus:border-[#ff584d]"
                    placeholder="your-shop-name"
                  >
                  <span class="text-gray-500 text-sm">/refer</span>
                </div>
                <p class="mt-1 text-xs text-gray-500">Only lowercase letters, numbers, and hyphens. 3-50 characters.</p>
                <% if @shop.slug.present? %>
                  <p class="mt-2 text-sm text-gray-600">
                    Current referral URL:
                    <a href="https://app.happypages.co/<%= @shop.slug %>/refer" target="_blank" class="text-[#ff584d] hover:underline">
                      https://app.happypages.co/<%= @shop.slug %>/refer
                    </a>
                  </p>
                <% end %>
              </div>

              <div>
                <button type="submit" class="px-4 py-2 bg-[#ff584d] text-white rounded-lg hover:bg-[#e64d43] transition-colors font-medium text-sm">
                  Update Slug
                </button>
              </div>
            <% end %>
          </div>
        </div>
      </section>
    <% end %>

    <% if @shop&.slug.present? %>
      <section class="mt-6">
        <div class="bg-[#f4f4f0] rounded-xl border border-black/5 shadow-[inset_1px_1px_0_rgba(255,255,255,1),inset_-1px_-1px_0_rgba(0,0,0,0.05),0_4px_8px_rgba(0,0,0,0.05)] overflow-hidden">
          <div class="px-6 py-4 border-b border-black/5">
            <h3 class="text-lg font-semibold text-gray-900">Theme Integration</h3>
            <p class="text-sm text-gray-500">Add a "My Referrals" button to your theme's customer account page</p>
          </div>

          <div class="p-6 space-y-4">
            <p class="text-sm text-gray-700">Paste this Liquid snippet into your theme:</p>
            <div class="relative">
              <pre class="bg-gray-900 text-gray-100 text-sm rounded-lg p-4 overflow-x-auto"><code id="theme-snippet">{% raw %}{%- if customer.metafields['app--happypages-friendly-referrals'].referral_code -%}
  &lt;a href="https://app.happypages.co/<%= @shop.slug %>/refer?code={{ customer.metafields['app--happypages-friendly-referrals'].referral_code }}"&gt;
    My Referrals
  &lt;/a&gt;
{%- endif -%}{% endraw %}</code></pre>
              <button
                type="button"
                onclick="navigator.clipboard.writeText(document.getElementById('theme-snippet').textContent).then(() => { this.textContent = 'Copied!'; setTimeout(() => { this.textContent = 'Copy'; }, 2000); })"
                class="absolute top-2 right-2 px-3 py-1 bg-white/10 hover:bg-white/20 text-white text-xs rounded-md transition-colors"
              >
                Copy
              </button>
            </div>
            <p class="text-xs text-gray-500">
              Works in Liquid themes. For Hydrogen/headless, query the Storefront API:
              namespace <code class="bg-gray-100 px-1 rounded">app--happypages-friendly-referrals</code>,
              key <code class="bg-gray-100 px-1 rounded">referral_code</code>.
            </p>
          </div>
        </div>
      </section>
    <% end %>
  </div>
</div>
