<div class="flex-1 flex items-center justify-center px-4 py-12">
  <div class="w-full max-w-md">
    <div class="bg-white border border-gray-200 rounded-xl shadow-sm p-6">
      <h1 class="text-lg font-semibold text-gray-900 mb-1">you've been invited to a spec session.</h1>
      <p class="text-sm text-gray-500 mb-4"><%= @handoff.session.project.name %></p>

      <% if @handoff.summary.present? %>
        <div class="bg-gray-50 rounded-lg p-3 mb-4">
          <p class="text-xs font-medium text-gray-500 mb-1">what's been covered so far:</p>
          <p class="text-sm text-gray-700"><%= @handoff.summary %></p>
        </div>
      <% end %>

      <% if @handoff.suggested_questions.present? %>
        <div class="mb-4">
          <p class="text-xs font-medium text-gray-500 mb-2">questions for you:</p>
          <ul class="space-y-1">
            <% @handoff.suggested_questions.each do |q| %>
              <li class="text-sm text-gray-700 flex items-start gap-2">
                <span class="text-gray-400 mt-0.5">&bull;</span>
                <span><%= q %></span>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_tag specs_guest_join_path(@handoff.invite_token), method: :get, class: "space-y-3" do %>
        <div>
          <label for="name" class="block text-xs font-medium text-gray-700 mb-1">your name</label>
          <input type="text" name="name" id="name" required
                 class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-[#ff584d]/20 focus:border-[#ff584d] outline-none"
                 placeholder="e.g. Sarah Jones">
        </div>
        <button type="submit"
                class="w-full px-4 py-2 bg-[#ff584d] text-white text-sm font-medium rounded-lg hover:bg-[#e64d43] transition-colors">
          join session
        </button>
      <% end %>
    </div>
  </div>
</div>
