<div class="flex flex-col h-[calc(100vh-49px)]"
     data-controller="spec-session"
     data-spec-session-url-value="<%= specs_guest_message_path(@handoff.invite_token) %>"
     data-spec-session-turns-used-value="<%= @session.turns_used %>"
     data-spec-session-turn-budget-value="<%= @session.turn_budget %>"
     data-spec-session-status-value="<%= @session.status %>"
     data-spec-session-csrf-value="<%= form_authenticity_token %>">

  <%# Header %>
  <div class="flex-none border-b border-gray-200 bg-white px-4 sm:px-6 py-3">
    <div class="max-w-3xl mx-auto flex items-center justify-between">
      <div>
        <h1 class="text-base font-semibold text-gray-900"><%= @project.name %></h1>
        <div class="flex items-center gap-2 text-xs text-gray-500">
          <span data-spec-session-target="phaseLabel"><%= @session.phase %></span>
          <span class="text-gray-300">&middot;</span>
          <span data-spec-session-target="turnCounter"><%= @session.turns_used %>/<%= @session.turn_budget %></span>
        </div>
      </div>
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-50 text-amber-700">guest</span>
    </div>
    <div class="max-w-3xl mx-auto mt-2">
      <div class="h-1 bg-gray-100 rounded-full overflow-hidden">
        <div class="h-full bg-[#ff584d] rounded-full transition-all duration-500" style="width: <%= [(@session.budget_percentage * 100).round, 100].min %>%"></div>
      </div>
    </div>
  </div>

  <%# Message thread %>
  <div class="flex-1 overflow-y-auto" data-spec-session-target="thread">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 py-6 space-y-4">
      <% @messages.each do |message| %>
        <%= render "admin/specs/message", message: message %>
      <% end %>
    </div>
  </div>

  <%# Loading indicator %>
  <div class="hidden max-w-3xl mx-auto px-4 sm:px-6" data-spec-session-target="loading">
    <div class="flex items-center gap-2 py-3">
      <svg class="animate-spin size-4 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <span class="text-sm text-gray-400">thinking...</span>
    </div>
  </div>

  <%# Options area %>
  <div class="hidden max-w-3xl mx-auto px-4 sm:px-6" data-spec-session-target="options"></div>

  <%# Input bar %>
  <% if @session.status == "active" %>
    <div class="flex-none border-t border-gray-200 bg-white px-4 sm:px-6 py-3">
      <div class="max-w-3xl mx-auto">
        <div class="hidden mb-2" data-spec-session-target="imagePreview"></div>
        <div class="flex items-end gap-2">
          <div class="flex-1">
            <textarea data-spec-session-target="input"
                      data-action="keydown->spec-session#handleKeydown"
                      class="w-full px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-[#ff584d]/20 focus:border-[#ff584d] outline-none transition-colors resize-none"
                      rows="1"
                      placeholder="type your answer..."></textarea>
          </div>
          <button type="button"
                  data-spec-session-target="sendButton"
                  data-action="click->spec-session#sendMessage"
                  class="flex-none p-2 text-white bg-[#ff584d] hover:bg-[#e64d43] transition-colors rounded-lg disabled:opacity-50 disabled:cursor-not-allowed">
            <svg class="size-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5"/>
            </svg>
          </button>
        </div>
      </div>
    </div>
  <% else %>
    <div class="flex-none border-t border-gray-200 bg-white px-4 sm:px-6 py-4">
      <div class="max-w-3xl mx-auto text-center">
        <p class="text-sm text-gray-500">session completed.</p>
      </div>
    </div>
  <% end %>
</div>
