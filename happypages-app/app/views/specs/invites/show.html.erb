<% content_for(:title) { "Set Your Password — Specs — happypages" } %>

<div class="min-h-[calc(100vh-49px)] flex items-center justify-center bg-[#f4f4f0] py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="flex flex-col items-center">
      <svg class="size-10 text-[#ff584d]" viewBox="0 0 24 24" fill="currentColor"><circle cx="12" cy="12" r="10"/></svg>
      <h2 class="mt-4 text-center text-3xl font-bold text-gray-900 tracking-tight">
        set your password.
      </h2>
      <p class="mt-2 text-center text-sm text-gray-500">
        you've been invited to <strong><%= @client.organisation.name %></strong> on happypages specs.
      </p>
    </div>

    <% if flash[:alert] %>
      <div class="rounded-md bg-red-50 p-4">
        <p class="text-sm font-medium text-red-800"><%= flash[:alert] %></p>
      </div>
    <% end %>

    <%= form_with url: specs_invite_path(token: @client.invite_token), method: :patch, class: "mt-8 space-y-6" do |f| %>
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700">email</label>
        <input type="email" id="email" value="<%= @client.email %>" disabled
               class="mt-1 block w-full px-3 py-2 rounded-lg border border-black/10 bg-gray-100 text-gray-500 sm:text-sm cursor-not-allowed">
      </div>

      <div>
        <label for="password" class="block text-sm font-medium text-gray-700">password</label>
        <%= f.password_field :password, id: "password", autocomplete: "new-password",
            class: "mt-1 block w-full px-3 py-2 rounded-lg border border-black/10 bg-white focus:ring-[#ff584d] focus:border-[#ff584d] sm:text-sm",
            placeholder: "at least 8 characters" %>
      </div>

      <div>
        <label for="password_confirmation" class="block text-sm font-medium text-gray-700">confirm password</label>
        <%= f.password_field :password_confirmation, id: "password_confirmation", autocomplete: "new-password",
            class: "mt-1 block w-full px-3 py-2 rounded-lg border border-black/10 bg-white focus:ring-[#ff584d] focus:border-[#ff584d] sm:text-sm" %>
      </div>

      <%= f.submit "set password & sign in",
          class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-[#ff584d] hover:bg-[#e64d43] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#ff584d] cursor-pointer" %>
    <% end %>
  </div>
</div>
