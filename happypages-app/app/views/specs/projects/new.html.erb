<% content_for(:title) { "New Spec — happypages" } %>

<div class="max-w-3xl mx-auto px-4 sm:px-6 py-8">
  <div class="mb-6">
    <%= link_to "← back", specs_dashboard_path, class: "text-sm text-gray-500 hover:text-gray-700 transition-colors" %>
  </div>

  <h1 class="text-xl font-semibold text-gray-900 mb-6">start a new spec.</h1>

  <%= form_with model: @project, url: specs_projects_path, method: :post, class: "space-y-6" do |f| %>
    <div>
      <label for="specs_project_name" class="block text-sm font-medium text-gray-700">project name</label>
      <%= f.text_field :name, id: "specs_project_name",
          class: "mt-1 block w-full px-3 py-2 rounded-lg border border-black/10 bg-white focus:ring-[#ff584d] focus:border-[#ff584d] sm:text-sm",
          placeholder: "e.g. Checkout Redesign" %>
      <% if @project.errors[:name].any? %>
        <p class="mt-1 text-sm text-red-600"><%= @project.errors[:name].first %></p>
      <% end %>
    </div>

    <div>
      <label for="specs_project_context_briefing" class="block text-sm font-medium text-gray-700">context <span class="text-gray-400">(optional)</span></label>
      <p class="text-xs text-gray-500 mt-0.5 mb-1">any background info that would help the AI interview you better.</p>
      <%= f.text_area :context_briefing, id: "specs_project_context_briefing", rows: 4,
          class: "block w-full px-3 py-2 rounded-lg border border-black/10 bg-white focus:ring-[#ff584d] focus:border-[#ff584d] sm:text-sm resize-none",
          placeholder: "e.g. We're a DTC skincare brand on Shopify. We need to redesign our checkout flow to reduce cart abandonment." %>
    </div>

    <%= f.submit "start interview",
        class: "inline-flex items-center gap-1.5 px-4 py-2 rounded-lg text-sm font-medium bg-[#ff584d] text-white hover:bg-[#e64d43] transition-colors cursor-pointer" %>
  <% end %>
</div>
