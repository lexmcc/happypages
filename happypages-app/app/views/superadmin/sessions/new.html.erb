<div class="bg-slate-800 rounded-xl border border-slate-700 shadow-xl p-8">
  <div class="text-center mb-6">
    <img src="/refrral-app-icon-large.png" alt="Happypages" class="size-12 rounded-xl mx-auto mb-3">
    <h1 class="text-xl font-semibold text-white">Super Admin</h1>
    <p class="text-sm text-slate-400 mt-1">Sign in to manage all shops</p>
  </div>

  <%= form_with url: superadmin_login_path, method: :post, class: "space-y-4" do |f| %>
    <div>
      <label for="email" class="block text-sm font-medium text-slate-300 mb-1">Email</label>
      <input type="email" name="email" id="email" required autofocus
        class="w-full px-3 py-2 bg-slate-900 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500">
    </div>

    <div>
      <label for="password" class="block text-sm font-medium text-slate-300 mb-1">Password</label>
      <input type="password" name="password" id="password" required
        class="w-full px-3 py-2 bg-slate-900 border border-slate-600 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-amber-500/50 focus:border-amber-500">
    </div>

    <button type="submit" class="w-full px-4 py-2.5 bg-amber-500 hover:bg-amber-600 text-slate-900 font-semibold rounded-lg transition-colors">
      Sign in
    </button>
  <% end %>
</div>
