<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Scene Assets</h1>
        <p class="text-gray-500 mt-1"><%= @scene_assets.count %> scenes in library</p>
      </div>
      <%= link_to "Add scene", new_superadmin_scene_asset_path,
          class: "px-4 py-2 bg-slate-900 text-white rounded-lg text-sm font-medium hover:bg-slate-800 transition-colors" %>
    </div>

    <%# Category filter %>
    <div class="flex gap-2 mb-6 flex-wrap">
      <%= link_to "All", superadmin_scene_assets_path,
          class: "px-3 py-1.5 rounded-full text-sm font-medium transition-colors #{params[:category].blank? ? 'bg-slate-900 text-white' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'}" %>
      <% SceneAsset::CATEGORIES.each do |cat| %>
        <%= link_to cat.capitalize, superadmin_scene_assets_path(category: cat),
            class: "px-3 py-1.5 rounded-full text-sm font-medium transition-colors #{params[:category] == cat ? 'bg-slate-900 text-white' : 'bg-gray-100 text-gray-600 hover:bg-gray-200'}" %>
      <% end %>
    </div>

    <% if @scene_assets.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @scene_assets.each do |asset| %>
          <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
            <% if asset.file.attached? %>
              <div class="aspect-video bg-gray-100">
                <%= image_tag asset.file.variant(resize_to_fill: [600, 340], format: :webp),
                    class: "w-full h-full object-cover", loading: "lazy" %>
              </div>
            <% else %>
              <div class="aspect-video bg-gray-100 flex items-center justify-center">
                <span class="text-gray-400 text-sm">No image</span>
              </div>
            <% end %>

            <div class="p-4">
              <div class="flex items-center gap-2 mb-2">
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-50 text-blue-700 border border-blue-100">
                  <%= asset.category %>
                </span>
                <% if asset.mood.present? %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-purple-50 text-purple-700 border border-purple-100">
                    <%= asset.mood %>
                  </span>
                <% end %>
              </div>

              <p class="text-sm text-gray-700 line-clamp-2 mb-3"><%= asset.description %></p>

              <% if asset.tags.any? %>
                <div class="flex flex-wrap gap-1 mb-3">
                  <% asset.tags.each do |tag| %>
                    <span class="px-1.5 py-0.5 bg-gray-100 text-gray-500 rounded text-xs"><%= tag %></span>
                  <% end %>
                </div>
              <% end %>

              <div class="flex gap-2">
                <%= link_to "Edit", edit_superadmin_scene_asset_path(asset),
                    class: "text-sm text-blue-600 hover:text-blue-800" %>
                <%= button_to "Delete", superadmin_scene_asset_path(asset), method: :delete,
                    data: { turbo_confirm: "Delete this scene asset?" },
                    class: "text-sm text-red-600 hover:text-red-800" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16 bg-white rounded-xl border border-gray-200">
        <p class="text-gray-500 mb-4">No scene assets yet</p>
        <%= link_to "Upload your first scene", new_superadmin_scene_asset_path,
            class: "text-sm text-blue-600 hover:text-blue-800 font-medium" %>
      </div>
    <% end %>
  </div>
</div>
