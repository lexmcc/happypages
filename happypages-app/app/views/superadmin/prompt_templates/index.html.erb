<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Prompt Templates</h1>
        <p class="text-gray-500 mt-1"><%= @prompt_templates.count %> templates</p>
      </div>
      <%= link_to "New template", new_superadmin_prompt_template_path,
          class: "px-4 py-2 bg-slate-900 text-white rounded-lg text-sm font-medium hover:bg-slate-800 transition-colors" %>
    </div>

    <% if @grouped.any? %>
      <% @grouped.each do |surface, templates| %>
        <div class="mb-8">
          <h2 class="text-lg font-semibold text-gray-900 mb-3 capitalize"><%= surface.humanize %></h2>
          <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
            <table class="min-w-full">
              <thead>
                <tr class="bg-gray-50 border-b border-gray-100">
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Key</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Preview</th>
                  <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-100">
                <% templates.each do |template| %>
                  <tr>
                    <td class="px-6 py-4 text-sm font-mono text-gray-900"><%= template.key %></td>
                    <td class="px-6 py-4 text-sm text-gray-500"><%= template.category || "Universal" %></td>
                    <td class="px-6 py-4">
                      <% if template.active? %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">Active</span>
                      <% else %>
                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-500">Inactive</span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-500 max-w-xs truncate"><%= template.template_text.first(80) %>...</td>
                    <td class="px-6 py-4 text-right">
                      <%= link_to "Edit", edit_superadmin_prompt_template_path(template),
                          class: "text-sm text-blue-600 hover:text-blue-800 mr-3" %>
                      <%= button_to "Delete", superadmin_prompt_template_path(template), method: :delete,
                          data: { turbo_confirm: "Delete template '#{template.key}'?" },
                          class: "text-sm text-red-600 hover:text-red-800" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-16 bg-white rounded-xl border border-gray-200">
        <p class="text-gray-500 mb-4">No prompt templates yet</p>
        <p class="text-sm text-gray-400 mb-4">Run <code class="bg-gray-100 px-1.5 py-0.5 rounded">rails runner db/seeds/prompt_templates.rb</code> to seed defaults</p>
        <%= link_to "Create your first template", new_superadmin_prompt_template_path,
            class: "text-sm text-blue-600 hover:text-blue-800 font-medium" %>
      </div>
    <% end %>
  </div>
</div>
