<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Name</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Active</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Referred Discount</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Referrer Reward</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Override</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Generations</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Created</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-100">
      <% @campaigns.each do |campaign| %>
        <tr>
          <td class="px-6 py-3 text-sm font-medium text-gray-900"><%= campaign.name %></td>
          <td class="px-6 py-3">
            <% if campaign.is_active %>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">Active</span>
            <% else %>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-500">Inactive</span>
            <% end %>
          </td>
          <td class="px-6 py-3 text-sm text-gray-600"><%= campaign.referred_discount_display %></td>
          <td class="px-6 py-3 text-sm text-gray-600"><%= campaign.referrer_reward_display %></td>
          <td class="px-6 py-3">
            <% if campaign.override_active? %>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-700">Active</span>
            <% elsif campaign.override_scheduled? %>
              <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-700">Scheduled</span>
            <% else %>
              <span class="text-xs text-gray-400">None</span>
            <% end %>
          </td>
          <td class="px-6 py-3 text-sm text-gray-900 tabular-nums"><%= campaign.discount_generations.size %></td>
          <td class="px-6 py-3 text-sm text-gray-500"><%= campaign.created_at.strftime("%b %d, %Y") %></td>
        </tr>
      <% end %>

      <% if @campaigns.empty? %>
        <tr>
          <td colspan="7" class="px-6 py-8 text-center text-gray-400 text-sm">No campaigns yet</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
