<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
  <table class="min-w-full">
    <tbody class="divide-y divide-gray-100">
      <tr>
        <td class="px-6 py-4 text-sm font-medium text-gray-500 w-48">Platform</td>
        <td class="px-6 py-4 text-sm text-gray-900"><%= @shop.platform_type.capitalize %></td>
      </tr>
      <tr>
        <td class="px-6 py-4 text-sm font-medium text-gray-500">Access Token</td>
        <td class="px-6 py-4">
          <% if @credential&.shopify_access_token.present? %>
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">Present</span>
          <% else %>
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-600">Missing</span>
          <% end %>
        </td>
      </tr>
      <tr>
        <td class="px-6 py-4 text-sm font-medium text-gray-500">Awtomic</td>
        <td class="px-6 py-4">
          <% if @credential&.awtomic_api_key.present? %>
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">Connected</span>
          <% else %>
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-500">Not connected</span>
          <% end %>
        </td>
      </tr>
      <tr>
        <td class="px-6 py-4 text-sm font-medium text-gray-500">Klaviyo</td>
        <td class="px-6 py-4">
          <% if @credential&.klaviyo_api_key.present? %>
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-700">Connected</span>
          <% else %>
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-500">Not connected</span>
          <% end %>
        </td>
      </tr>
      <tr>
        <td class="px-6 py-4 text-sm font-medium text-gray-500">Shop Slug</td>
        <td class="px-6 py-4 text-sm text-gray-900 font-mono"><%= @shop.slug || "â€”" %></td>
      </tr>
      <tr>
        <td class="px-6 py-4 text-sm font-medium text-gray-500">Storefront URL</td>
        <td class="px-6 py-4 text-sm text-gray-900"><%= @shop.customer_facing_url %></td>
      </tr>
    </tbody>
  </table>
</div>
