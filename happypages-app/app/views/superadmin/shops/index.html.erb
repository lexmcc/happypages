<div class="py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6">
    <header class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Shops</h1>
      <p class="text-gray-500 mt-1"><%= @shops.count %> total</p>
    </header>

    <%# Status filter tabs %>
    <div class="flex gap-2 mb-6">
      <% [["All", nil], ["Active", "active"], ["Suspended", "suspended"], ["Uninstalled", "uninstalled"]].each do |label, status| %>
        <% active = params[:status] == status %>
        <%= link_to label,
            superadmin_shops_path(status: status),
            class: "px-4 py-2 rounded-lg text-sm font-medium transition-colors #{active ? 'bg-slate-900 text-white' : 'bg-white text-gray-600 border border-gray-200 hover:bg-gray-50'}" %>
      <% end %>
    </div>

    <%# Shop table %>
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Shop</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Platform</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Installed</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Referrals</th>
            <th class="px-6 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Slug</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% @shops.each do |shop| %>
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-6 py-4">
                <%= link_to superadmin_shop_path(shop), class: "block" do %>
                  <p class="text-sm font-medium text-gray-900"><%= shop.name %></p>
                  <p class="text-xs text-gray-500"><%= shop.domain %></p>
                <% end %>
              </td>
              <td class="px-6 py-4">
                <% badge_class = case shop.status
                   when "active" then "bg-green-100 text-green-700"
                   when "suspended" then "bg-red-100 text-red-700"
                   when "uninstalled" then "bg-gray-100 text-gray-500"
                   end %>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium <%= badge_class %>">
                  <%= shop.status %>
                </span>
              </td>
              <td class="px-6 py-4 text-sm text-gray-600"><%= shop.platform_type %></td>
              <td class="px-6 py-4 text-sm text-gray-600"><%= shop.created_at.strftime("%b %d, %Y") %></td>
              <td class="px-6 py-4 text-sm text-gray-900 font-medium tabular-nums"><%= @referral_counts[shop.id] || 0 %></td>
              <td class="px-6 py-4 text-sm text-gray-500 font-mono"><%= shop.slug %></td>
            </tr>
          <% end %>

          <% if @shops.empty? %>
            <tr>
              <td colspan="6" class="px-6 py-12 text-center text-gray-400">No shops found</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
