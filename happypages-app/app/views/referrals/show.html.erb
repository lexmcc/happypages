<div class="min-h-screen py-8"
     style="--primary: <%= referral_config('referral_primary_color') %>;
            --secondary: <%= referral_config('referral_secondary_color') %>;
            background-color: <%= referral_config('referral_background_color') %>;">
  <div class="max-w-md lg:max-w-4xl mx-auto px-4">
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
      <% if referral_config('referral_banner_image').present? %>
        <img src="<%= referral_config('referral_banner_image') %>"
             alt=""
             class="w-full aspect-video lg:aspect-[3/1] object-cover">
      <% end %>

      <div class="bg-gray-50 px-6 py-4 border-b border-gray-200 text-center">
        <h1 class="text-2xl lg:text-3xl font-bold text-gray-900 text-balance"><%= interpolate_referral_text(referral_config('referral_heading')) %></h1>
        <p class="text-gray-600 mt-1 text-pretty"><%= interpolate_referral_text(referral_config('referral_subtitle')) %></p>
      </div>

      <div class="p-6 lg:p-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
          <div class="lg:order-1">
            <div class="text-center lg:text-left">
              <p class="text-gray-500 text-sm uppercase mb-2">Your Referral Code</p>
              <div class="flex flex-col lg:flex-row items-center lg:items-start gap-3" data-controller="clipboard" data-clipboard-email-value="<%= @referral.email %>" data-clipboard-referral-code-value="<%= @referral.referral_code %>">
                <span class="text-3xl lg:text-4xl font-mono font-bold text-gray-900 bg-gray-100 px-6 py-3 rounded-lg">
                  <%= @referral.referral_code %>
                </span>
                <div class="relative w-full lg:w-auto">
                  <button
                    data-action="click->clipboard#copy"
                    data-clipboard-text-value="https://<%= ENV['SHOPIFY_SHOP_URL'] %>/discount/<%= @referral.referral_code %>?share_source=copylink"
                    class="w-full lg:w-auto px-6 py-3 text-white rounded-lg transition-colors cursor-pointer flex items-center justify-center gap-2"
                    style="background-color: var(--primary);"
                    onmouseover="this.style.opacity='0.9'"
                    onmouseout="this.style.opacity='1'"
                    aria-label="<%= referral_config('referral_copy_button_text') %>"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="size-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                    <span><%= referral_config('referral_copy_button_text') %></span>
                  </button>
                  <span
                    data-clipboard-target="tooltip"
                    class="absolute -top-9 left-1/2 -translate-x-1/2 bg-gray-800 text-white text-xs px-2 py-1 rounded opacity-0 transition-opacity duration-200 pointer-events-none whitespace-nowrap"
                  >
                    Copied!
                  </span>
                </div>
              </div>
            </div>

            <div class="mt-6 pt-6 border-t border-gray-100 text-center lg:text-left">
              <p class="text-sm text-gray-500">
                Code used <span class="font-semibold text-gray-900 tabular-nums"><%= @referral.usage_count %></span> times
              </p>
            </div>
          </div>

          <div class="lg:order-2">
            <div class="lg:pl-8 lg:border-l lg:border-gray-100">
              <h2 class="font-semibold text-gray-900 mb-4 text-balance">How It Works</h2>
              <ol class="space-y-3 text-gray-600">
                <li class="flex items-start gap-3">
                  <span class="flex-shrink-0 size-6 rounded-full flex items-center justify-center text-sm font-medium"
                        style="background-color: var(--secondary); opacity: 0.3; color: var(--primary);">
                    <span style="opacity: 1;">1</span>
                  </span>
                  <span><%= interpolate_referral_text(referral_config('referral_step_1')) %></span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="flex-shrink-0 size-6 rounded-full flex items-center justify-center text-sm font-medium"
                        style="background-color: var(--secondary); opacity: 0.3; color: var(--primary);">
                    <span style="opacity: 1;">2</span>
                  </span>
                  <span><%= interpolate_referral_text(referral_config('referral_step_2')) %></span>
                </li>
                <li class="flex items-start gap-3">
                  <span class="flex-shrink-0 size-6 rounded-full flex items-center justify-center text-sm font-medium"
                        style="background-color: var(--secondary); opacity: 0.3; color: var(--primary);">
                    <span style="opacity: 1;">3</span>
                  </span>
                  <span><%= interpolate_referral_text(referral_config('referral_step_3')) %></span>
                </li>
              </ol>
            </div>
          </div>
        </div>

        <% visible_rewards = @rewards.reject { |r| r.expired? || r.cancelled? } %>
        <% if visible_rewards.any? %>
          <div class="mt-8 pt-8 border-t border-gray-100">
            <h2 class="font-semibold text-gray-900 mb-4 text-balance">Your Rewards</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-3">
              <% visible_rewards.each do |reward| %>
                <% if reward.consumed? %>
                  <div class="flex items-center justify-between bg-gray-50 px-4 py-3 rounded-lg">
                    <span class="font-mono font-medium text-gray-400 line-through"><%= reward.code %></span>
                    <span class="text-xs text-gray-400 flex items-center gap-1">
                      <svg xmlns="http://www.w3.org/2000/svg" class="size-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      Reward redeemed
                    </span>
                  </div>
                <% else %>
                  <div class="flex items-center justify-between bg-green-50 px-4 py-3 rounded-lg">
                    <span class="font-mono font-medium text-green-800"><%= reward.code %></span>
                    <span class="text-xs text-green-600"><%= @reward_display %> off</span>
                  </div>
                <% end %>
              <% end %>
            </div>
            <% if visible_rewards.any? { |r| !r.consumed? } %>
              <p class="text-xs text-gray-500 mt-3">Use these codes at checkout for <%= @reward_display %> off your next order!</p>
            <% end %>
          </div>
        <% end %>

        <div class="mt-8 text-center">
          <a
            href="https://<%= ENV['SHOPIFY_SHOP_URL'] %>"
            class="font-medium transition-colors"
            style="color: var(--primary);"
          >
            &larr; <%= referral_config('referral_back_button_text') %>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
